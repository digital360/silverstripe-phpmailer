// Insert this in mysite/_config.php and change it accordingly:

// Required:
define('SMTPMAILER_SMTP_SERVER_ADDRESS', 'smtp.server.address');
define('SMTPMAILER_DO_AUTHENTICATE', true); // Turn on SMTP server authentication (false for an anonymous connection).

// Required if SMTPAUTH == true
define('SMTPMAILER_USERNAME', 'smtp@server.username'); // Set SMTP server username
define('SMTPMAILER_PASSWORD', 'smtp-server-password'); // Set SMTP server password

// Optional:
define('SMTPMAILER_CHARSET_ENCODING', 'utf-8'); // Encoding e.g. : 'utf-8' or 'iso-8859-1'
define('SMTPMAILER_USE_SECURE_CONNECTION', 'ssl'); // Encryption method : Set to '', 'tls', or 'ssl'
define('SMTPMAILER_SMTP_SERVER_PORT', 465); // server port: 25 (no encryption) or 465 (tls/ssl)
define('SMTPMAILER_DEBUG_MESSAGING_LEVEL', 0); // Debug: 0 (off), 1 (errors), 2 (errors and messages), 4 (all)
define('SMTPMAILER_LANGUAGE_OF_MESSAGES', 'de'); // Look into smtp/code/vendor/language/ for available languages
define('SMTPMAILER_SEND_DELAY', 2000); // Throttling in milliseconds. (Can be set to 0.)
